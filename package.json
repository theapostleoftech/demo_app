{
  "name": "demo_ap",
  "description": "Run the tailwind build step before django's collectstatic",
  "version": "1.0.0",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "heroku-prebuild": "cd demo_app && npm ci --include=dev",
    "heroku-postbuild": "cd demo_app && npm run build",
    "build": "npx tailwindcss -i ./demo_app/static/src/input.css -o ./demo_app/static/src/styles.css",
    "watch": "npx tailwindcss -i ./demo_app/static/src/input.css -o ./demo_app/static/src/styles.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.9",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.24",
    "postcss-import": "^15.1.0",
    "postcss-nested": "^6.0.1",
    "postcss-simple-vars": "^7.0.1",
    "rimraf": "^5.0.1",
    "tailwindcss": "^3.3.2",
    "flowbite": "^2.4.1"
  },
  "dependencies": {
    "flowbite": "^2.4.1"
  }
}